.container{
    width:100%;
    height:100%;
    display: flex;
    flex-flow: row wrap;
    background:#f3f3f3;
    padding-bottom: 20%;
}
.container>.item{
    width:42.5%;
    /* height:420rpx; */
    margin-top:5%;
    margin-left: 5%;
    /* border:1px solid red; */
    background:#fff;
    border-radius: 0rpx;
    display: flex;
    flex-direction: column;
}
.container>.item>image:first-child{
    width:100%;
    /* height:4rpx; */
    border-radius: 50rpx;    
}
.container>.item>view.item-text{
    /* border:1px solid red; */
    padding-left: 20rpx;
}
.container>.item>view.item-text>text:first-child{
    color:#171717;
    font-size:16px;
    font-weight: 500;
    float: left;
}
.container>.item>view.item-text>text:nth-child(2){
    color:#f26707;
    letter-spacing: 0rpx;
}
.container>.item>view.item-text>text:nth-child(3){
    color:#969696;
    font-size:12px;
    margin-left: 10rpx;
    text-decoration: line-through;
}