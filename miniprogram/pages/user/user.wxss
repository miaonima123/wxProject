.body{
    background:#f5f5f5;
    padding-bottom: 200rpx;
}
.container{
    height:260rpx;
    width:100%;
    /* border:1px solid red; */
    background-image: linear-gradient(to bottom right,#ff5556,#d01818);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.container>.avatr{
    width:130rpx;
    height:130rpx;
    border-radius: 50%;
    background:#f7d7d8;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    border:3px solid #cf2a2f;
}
/* .container>.avatr>image{
    width:100rpx;
    height:100rpx;
} */
.container>button{
    border:0;
    background: rgba(0, 0,0, 0);
    color:#fff;
    font-size:20px;
    font-weight: 600;
    padding: 0;
    /* border:1px solid black; */
}
.container>text{
    display: block;
    margin-top: 15rpx;
    font-size:20px;
    color:#fff;
    /* display: none; */
}
.container>button::after{ border: none; }

.Favorites{
    width:100%;
    display: flex;
    justify-content: space-between;
    background:#fff;
}
.Favorites>.f-item{
    padding-top:10rpx;
    width:450rpx;
    height:105rpx;
    /* border:1px solid black; */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.Favorites>.f-item>text{
    color:#3e3e3e;
    font-size:15px;
}
.box{
    height:75rpx;
    width:100%;
    /* border:1px solid red; */
    display: flex;
    justify-content: space-between;
    align-items: center;
    border:1px solid #f6f6f6;      
    background:#fff;      
}
.box-item{
    width:310rpx;
    /* border:1px solid black; */
    display: flex;
    align-items: center;
}
.box-item>image{
    width:40rpx;
    height:40rpx;
    margin-left: 30rpx;
    margin-right:20rpx;
}
.box-item>text{
    color:#232323;
    font-size:16px;
}
.box>text:last-child{
    color:#cacaca;
    margin-right: 20rpx;
    font-size:18px;
}
.tel{
    height:76rpx;
    text-align: center;
    background:#fff;    
}
.tel>text{
    font-size:18px;
    line-height: 76rpx;
}

.hide{
    display: none;
}




.userinfo {  
    position: relative;  
    width: 100%;  
    height: 320rpx;  
    color: #fff;  
    display: flex;  
    flex-direction: column;  
    align-items: center;  
  }  
    
  .userinfo-avatar {  
    overflow:hidden;  
    display: block;  
    width: 160rpx;  
    height: 160rpx;  
    margin: 20rpx;  
    margin-top: 50rpx;  
    border-radius: 50%;  
    border: 2px solid #fff;  
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
  }  
    
  .userinfo{  
    /* color: #fff; */  
    font-size: 14px;  
    background-image: linear-gradient(to bottom right,#ff5556,#d01818);
  }