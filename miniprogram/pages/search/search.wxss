.container{
    background-color:#f3f3f3;
    padding-top:20rpx;
    padding-bottom: 1000rpx;
}
.wrap {
    position: relative;
    text-align: center;
    width: 100%;
    /* margin: 20rpx 0; */
    color:#595959;
    font-weight: lighter;
}
.wrap view {
    line-height: 20px;
}
.wrap view:after, .wrap view:before {
    position: absolute;
    top: 50%;
    background: #ddd;
    content: "";
    height: 1px;
    width: 25%;
}
/*调整背景横线的左右距离*/
.wrap view:before {
    left: 0;
}
.wrap view:after {
    right: 0;
}

/* 商品列表详情 */
.goods-list{
    width:100%;
    height:100%;
    height:100%;
    /* border:1px solid red; */
    display: flex;
    flex-flow: row wrap;
    margin-top: 20rpx;
}
.goods-list-item{
    box-sizing: border-box;
    width:42.5%;
    height:315rpx;
    /* border:1px solid green; */
    margin-bottom: 30rpx;
    margin-left: 5%;
    background:#fff;
    border-radius: 50rpx;
    text-align: center;
}
.goods-list-item>image{
    display: inline-block;
    border-radius: 50rpx;    
    width:205rpx;
    height:197rpx;
    /* border:1px solid red; */
}
.goods-list-text{
    /* width:100%; */
    width:290rpx;
    height:110rpx;
    border:1px solid red;
    padding-left: 25rpx;
    text-align: left;

}
.goods-list-text>text:first-child{
    display: block;
    font-size:18px;
    /* font-weight: 600; */
    font-weight: 600;
    color:#1e1e1e;
    margin-bottom: 0rpx;
    /* border-bottom: 1px solid red; */
    overflow:hidden; 
    text-overflow:ellipsis;
    white-space:nowrap; 
}
.goods-list-text>text:nth-child(2){
    color:#f55700;
    font-size:17px;
    font-weight: 900;
    margin-right: 10rpx;
}
.goods-list-text>text:nth-child(3){
    font-size: 14px;
    color:#919191;
    text-decoration:line-through;
}
.goods-list-text>image:nth-child(4){
    width:50rpx;
    height:50rpx;
    margin-left: 15rpx;
}